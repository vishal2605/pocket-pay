{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020"
  },
  "include": ["./index.ts", "./prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
